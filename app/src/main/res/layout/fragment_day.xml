<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 배경으로 사용될 이미지뷰 -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/day_note"
        android:layout_marginBottom="100dp"
        android:scaleType="fitXY" />
    <!-- 상단 날짜 표시 -->
    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="220dp"
        android:text="Date 2023.11.12"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- 오늘의 할 일 제목 -->
    <TextView
        android:id="@+id/tvTodoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/Date"
        android:layout_marginTop="24dp"
        android:text="오늘의 할 일"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- 오늘의 할 일 입력창 -->
    <EditText
        android:id="@+id/etTodo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/tvTodoTitle"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:background="@drawable/addtodayworks"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:drawablePadding="10dp" />

    <!-- 오늘의 한 컷 제목 -->
    <TextView
        android:id="@+id/tvPhotoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTodo"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="30dp"
        android:text="오늘의 한 컷"
        android:layout_marginBottom="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- 이미지 추가 버튼 -->

    <ImageButton
        android:id="@+id/btnAddPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"

        android:layout_below="@+id/tvPhotoTitle"
        android:layout_marginTop="24dp"
        android:background="@drawable/camera"
        android:padding="10dp" />

    <!-- 이미지 추가 버튼 오른쪽의 텍스트 라인 -->
    <View
        android:id="@+id/viewPhotoLine"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignTop="@id/btnAddPhoto"

        android:layout_marginRight="30dp"
        android:layout_toEndOf="@id/btnAddPhoto"
        android:background="#F6C6FF" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
    <!-- 작기록란 제목 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvJournalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnAddPhoto"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="30dp"
                android:text="장기목표기록"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <!-- 장기목표란 입력창 -->
            <EditText
                android:id="@+id/etJournal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/tvJournalTitle"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/day_icon"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:drawablePadding="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 오늘의 기분 제목 -->
            <TextView
                android:id="@+id/tvMoodTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etJournal"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="30dp"

                android:text="오늘의 기분"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <!-- 오늘의 기분 추가 버튼들 -->
            <!-- 버튼 배치는 이미지에 따라 조정해야 합니다. -->
            <!-- 예시로 하나의 버튼만 배치하겠습니다. -->
            <ImageButton
                android:id="@+id/btnMoodHappy"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"

                android:layout_below="@+id/tvMoodTitle"
                android:layout_marginTop="8dp"
                android:background="@drawable/joy"
                android:padding="10dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
